@using Client_App.Components.Model
@using Client_App.DTOs.Products.Responses

<div class="grid grid-cols-2 gap-x-[30px] gap-y-[60px] ipadpro:grid-cols-4 ipadpro:gap-y-[80px]">
    @foreach (var product in Products[..2])
    {
        <Product ProductsInList="product"/>
    }
</div>
<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-8 gap-y-16">
    @foreach (var product in Products[2..])
    {
        <Product ProductsInList="product"/>
    }

</div>


@code {
    [Parameter] public List<ProductsInList> Products { get; set; } = [];

    private int TotalPages { get; set; }
}
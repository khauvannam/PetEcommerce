@using Client_App.Components.Share
@using Client_App.Domains.Categories.Responses

<div class="w-full px-6 md:px-20 py-10 bg-[#f0f5ff] text-main flex justify-center">
    <div class="w-full max-w-[1440px] mx-auto">
        <div class="flex justify-between capitalize px-4">
            <h1 class="text-2xl font-extrabold font-heading">Feature collections</h1>
            <h3>
                <NavLink href="/products/all" class="underline">Shop all</NavLink>
            </h3>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 pt-12">
            @if (Categories.Count > 0)
            {
                @foreach (var category in Categories.Take(4))
                {
                    <NavLink href="@($"/products/{category.Endpoint}")" class="flex flex-col justify-between bg-[#f0f5ff] items-center rounded-lg w-full">
                        <div class="w-full flex justify-center bg-white rounded-lg">
                            <img class="h-[168px] object-fill w-full rounded-lg" src="@category.ImageUrl" alt="@category.CategoryName">
                        </div>
                        <p class="text-center my-4 py-3 text-xl font-bold  w-full">@category.CategoryName</p>
                        <p class="mb-5">@LimitDescription(category.Description!)</p>
                        <CustomButton Value="Learn more"/>
                    </NavLink>
                }
            }
            else
            {
                for (var i = 0; i < 4; i++)
                {
                    <div role="status" class="max-w-sm p-4 rounded animate-pulse md:p-6 min-w-[300px]">
                        <div class="flex items-center justify-center h-48 mb-4 bg-gray-300 rounded dark:bg-gray-700">
                            <svg class="w-10 h-10 text-gray-200 dark:text-gray-600" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 20">
                                <path d="M14.066 0H7v5a2 2 0 0 1-2 2H0v11a1.97 1.97 0 0 0 1.934 2h12.132A1.97 1.97 0 0 0 16 18V2a1.97 1.97 0 0 0-1.934-2ZM10.5 6a1.5 1.5 0 1 1 0 2.999A1.5 1.5 0 0 1 10.5 6Zm2.221 10.515a1 1 0 0 1-.858.485h-8a1 1 0 0 1-.9-1.43L5.6 10.039a.978.978 0 0 1 .936-.57 1 1 0 0 1 .9.632l1.181 2.981.541-1a.945.945 0 0 1 .883-.522 1 1 0 0 1 .879.529l1.832 3.438a1 1 0 0 1-.031.988Z"/>
                                <path d="M5 5V.13a2.96 2.96 0 0 0-1.293.749L.879 3.707A2.98 2.98 0 0 0 .13 5H5Z"/>
                            </svg>
                        </div>
                        <div class="h-2.5 bg-gray-200 rounded-full dark:bg-gray-700 w-48 mb-4"></div>
                        <div class="h-2 bg-gray-200 rounded-full dark:bg-gray-700 mb-2.5"></div>
                        <div class="h-2 bg-gray-200 rounded-full dark:bg-gray-700 mb-2.5"></div>
                        <div class="h-2 bg-gray-200 rounded-full dark:bg-gray-700"></div>
                        <span class="sr-only">Loading...</span>
                    </div>
                }
            }
        </div>
    </div>
</div>


@code {
    [Parameter] public List<Category> Categories { get; set; } = null!;

    private static string LimitDescription(string description)
    {
        return description[..50] + "...";
    }

}
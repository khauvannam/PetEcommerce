@using Client_App.Domains.Categories.Responses
@* Breadcrumb Navigation *@
<div class="w-full pt-5 px-10 flex justify-center ">
    <div class="w-full max-w-[1300px] flex items-center text-main">
        <NavLink href="/" class="hover:underline">Home</NavLink>
        <span class="mx-1">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="rgba(0,32,92,1)">
                <path d="M13.1717 12.0007L8.22192 7.05093L9.63614 5.63672L16.0001 12.0007L9.63614 18.3646L8.22192 16.9504L13.1717 12.0007Z"></path>
            </svg>
        </span>
        <NavLink class="hover:underline" href="@($"/products/{Category.Endpoint}")">@Category.CategoryName</NavLink>
    </div>
</div>


<div class="flex w-full justify-center mt-4">
    <div class="flex max-w-[1300px] w-full justify-between">
        <div class="w-5/12 flex flex-col justify-center ">
            <p class="text-sm text-main mt-2.5 font-light italic">
                Trusted, Effective Solutions
            </p>
            <h3 class="text-main text-[48px] font-bold mb-5 font-heading_bold">@Category.CategoryName</h3>
            <p class="my-4 text-main font-light text-sm">
                @Category.Description
            </p>
        </div>
        <div class="w-5/12">
            <img src="@(Category.ImageUrl ?? "./images/productsbycategory/default.avif")" class="object-cover w-full h-full rounded-lg" alt="">
        </div>
    </div>
</div>


@code {
    [Parameter] public Category Category { get; set; } = null!;
}